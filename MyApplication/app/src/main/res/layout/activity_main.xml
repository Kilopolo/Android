<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.myapplication.MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:onClick="sumar"
        android:text="Sumar"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/tv3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="310dp"
        android:layout_height="29dp"
        android:fontFamily="monospace"
        android:text="introduce el segundo numero"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="37dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toTopOf="@+id/et2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="introduce el primer numero"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="368dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textView" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/button2" />

</android.support.constraint.ConstraintLayout>
